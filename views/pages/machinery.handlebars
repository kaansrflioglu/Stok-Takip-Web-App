<title>Stok | Makine</title>

<header>
    <div class="px-3 py-2 bg-custom border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <h1 class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">Makine
                    Stok</h1>
                <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    <li class="header-li">
                        <a href="/" class="nav-link text-white">
                            <img class="bi d-block mx-auto mb-1 svg-icon" width="32" height="32" src="assets/home.svg">
                            <h6>Ana Sayfa</h6>
                        </a>
                    </li>
                    <li>
                        <a href="/machinery" class="nav-link text-white">
                            <img class="bi d-block mx-auto mb-1 svg-icon" width="32" height="32"
                                src="assets/machinery.svg">
                            <h6>Makine</h6>
                        </a>
                    </li>
                    <li>
                        <a href="/spare-parts" class="nav-link text-white">
                            <img class="bi d-block mx-auto mb-1 svg-icon" width="32" height="32"
                                src="assets/spare-parts.svg">
                            <h6>Yedek Parça</h6>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<div class="main-container">

    <main class="container mt-4 main-content">
        <h2 class="mb-4">Stok Listesi</h2>

        <div class="alert alert-info">
            <h5 class="mb-0">Son Güncellenme:</h5>
            <p class="mb-0">{{lastUpdated}}</p>
        </div>
        <h2 class="mt-4 mb-4">Yeni Stok Ekle</h2>
        <form action="/machinery/add" method="POST">
            <div class="mb-3">
                <label for="item" class="form-label">Ürün:</label>
                <input type="text" id="item" name="item" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Miktar:</label>
                <input type="number" id="quantity" name="quantity" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary px-4">Ekle</button>
        </form>
        <div class="table-responsive mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün</th>
                        <th>Miktar</th>
                        <th>Son Güncellenme Tarihi</th>
                        <th>Ürün Miktarı</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stocks}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.item}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.last_updated}}</td>
                        <td>
                            <form action="/machinery/update/{{this.id}}" method="POST" class="d-inline">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="quantity" value="{{this.quantity}}"
                                        required>
                                    <button type="submit" class="btn btn-warning">Güncelle</button>
                                </div>
                            </form>
                        </td>
                        <td>
                            <form action="/machinery/delete/{{this.id}}" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger px-4">Sil</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>




    </main>

</div>